/* pages/cart/index.wxss */
.revice_address_row .address_btn {
  padding: 20rpx;
}
.revice_address_row .address_btn button {
  width: 60%;
}
.revice_address_row .user_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .user_info_row .user_info {
  flex: 5;
}
.revice_address_row .user_info_row .user_phone {
  flex: 3;
  text-align: right;
}
.car_container .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  border-top: 1rpx solid var(--themeColor);
  border-bottom: 1rpx solid var(--themeColor);
}
.car_container .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: #ccc solid 1rpx;
}
.car_container .cart_main .cart_item .car_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.car_container .cart_main .cart_item .car_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.car_container .cart_main .cart_item .car_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_name {
  flex: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  border: 1rpx solid #ccc;
}
.car_container .cart_main .cart_item .car_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  color: #666;
  justify-content: center;
  align-items: center;
}
.foot_tool {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.foot_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot_tool .total_price_wrap {
  padding: 15rpx;
  flex: 4;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.foot_tool .total_price_wrap .total_price {
  display: flex;
}
.foot_tool .total_price_wrap .total_price text.total_price_text {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.foot_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
page {
  padding-bottom: 90rpx;
}
